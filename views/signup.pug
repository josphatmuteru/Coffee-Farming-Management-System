extends base

block content
  main.main.main--authentication
    form.form.form--authentication.authentication--signup(action='')
      h1 Coffee Farming Management System
      h2 Create your account
      .form-row--vertical
        label.label(for='name') Name
        input#name.input(required='', placeholder='Josphat',  value='Josphat' type='text')
      .form-row--vertical
        label.label(for='email') Email
        input#email.input(required='', placeholder='example@email.com', value='example@email.com' type='email')
      .form-row--vertical
        label.label(for='password') Password
        input#password.input(minlength='8', required='', value='pass1234' type='password')
      .form-row--vertical
        label.label(for='password') Confirm Password
        input#passwordConfirm.input(minlength='8', required='',  value='pass1234' type='password')
      div
        button.btn.btn-primary.btn-large Signup
      .form-row--vertical
        p.mt-md.text-align-center
          | Already have have an account?&nbsp;
          a(href='/login') Login