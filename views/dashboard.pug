              div#harvestChart(data-harvest-data=harvestData)
                canvas#myChart
              script(src='https://cdn.jsdelivr.net/npm/chart.js')
              script(src='https://cdn.jsdelivr.net/npm/chart.js')
              script.
                const ctx = document.getElementById("myChart");
                let harvestData = document.getElementById("harvestChart").getAttribute('data-harvest-data');
               harvestData =JSON.parse(harvestData)
                const labels = harvestData.map(item => item.month);
                const yieldAmount = harvestData.map(item => item.total_yield_amount)
                new Chart(ctx, {
                type: "bar",
                data: {
                  labels,
               
                datasets: [
                {
                label: "Amount by Weight",
                data: yieldAmount,
              
                borderWidth: 1,
                },
                ],
                },
                options: {
                scales: {
                y: {
                beginAtZero: true,
                },
                },
                
                },
                });
